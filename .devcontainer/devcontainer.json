{
  "name": "Java Spring Microservices",
  "image": "mcr.microsoft.com/devcontainers/java:21-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": true,
      "installGradle": false
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "postCreateCommand": "cd patient-service && mvn clean install -DskipTests",
  "forwardPorts": [4000, 5432, 9092, 9094],
  "portsAttributes": {
    "4000": {"label": "Patient Service"},
    "5432": {"label": "PostgreSQL"},
    "9092": {"label": "Kafka Internal"},
    "9094": {"label": "Kafka External"}
  }
}